<form asp-action="Delete">
    <table>

        <tr>
            <td>
                <label asp-for="Name"></label>
            </td>
            <td>
                <input asp-for="Name" placeholder="Enter student name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </td>

        </tr>
        <tr>
            <td>
