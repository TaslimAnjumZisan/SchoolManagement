@model SchoolManagement.ViewModel.Teacher.TeacherEditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Update Teacher</h1>
<form asp-action="Edit">
    <table>

        <tr>
            <td>
                <label asp-for="Name"></label>
            </td>
            <td>
                <input asp-for="Name" placeholder="Enter Teacher name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </td>

        </tr>


        <tr>
            <td>
                <label asp-for="Subject"></label>
            </td>
            <td>
                <input asp-for="Subject" placeholder="Enter Teacher contact" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </td>
        </tr>



        <tr>
            <td>
                <label asp-for="Email"></label>
            </td>
            <td>
                <input asp-for="Email" placeholder="Enter Teacher email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </td>
        </tr>

        <tr>
            <td>
                <label asp-for="Phone"></label>
            </td>
            <td>
                <input asp-for="Phone" placeholder="Enter Teacher  contact" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </td>
        </tr>



        <tr>
            <td>
                <label asp-for="Password"></label>
            </td>
            <td>
                <input asp-for="Password" placeholder="Enter Teacher password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td>
                <button class="btn btn-primary" type="submit">Update</button>
                <a asp-action="Index" class="btn btn-success" asp-controller="Teacher">Back to List</a>
            </td>
        </tr>
    </table>

</form>


